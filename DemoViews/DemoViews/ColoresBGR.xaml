<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoViews.ColoresBGR">
    <ContentPage.Content>
        <StackLayout>
            <BoxView x:Name="boxcolor"
                     BackgroundColor="Black"
                     HeightRequest="100"
                     WidthRequest="100"
                     HorizontalOptions="Center"
                     />
            <Label Margin="25,30,0,0"
                   Text="Rojo"/>
            <Slider  x:Name="sldrojo"
                     Margin="15,0,0,0"
                     ValueChanged="CambiarColor"
                     />
            <Label Margin="25,30,0,0"
                   Text="Azul"
                   />
            <Slider x:Name="sldazul"
                    Margin="15,0,0,0"
                    ValueChanged="CambiarColor"
                    />
            <Label Margin="25,30,0,0"
                   Text="Verde"
                   />
            <Slider x:Name="sldverde"
                    Margin="15,0,0,0"
                    ValueChanged="CambiarColor"
                    />
            <Label x:Name="lbDisplay"
                   Text="Valor Hexadecimal"
                   FontAttributes="Bold"
                   FontSize="Large"
                   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>